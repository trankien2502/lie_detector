<!-- res/drawable/multi_shape.xml -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Layer 1: Hình vuông -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#FF6347" /> <!-- Màu cam đỏ -->
            <size android:width="200dp" android:height="200dp" />
        </shape>
    </item>

    <!-- Layer 2: Hình tròn nằm trên cùng -->
    <item android:left="50dp" android:top="50dp">
        <shape android:shape="oval">
            <solid android:color="#4682B4" /> <!-- Màu xanh dương -->
            <size android:width="100dp" android:height="100dp" />
        </shape>
    </item>

    <!-- Layer 3: Hình chữ nhật nằm trên cùng -->
    <item android:left="80dp" android:top="80dp">
        <shape android:shape="rectangle">
            <solid android:color="#32CD32" /> <!-- Màu xanh lá -->
            <size android:width="80dp" android:height="40dp" />
        </shape>
    </item>

    <!-- Layer 4: Hình elip nằm trên cùng -->
    <item android:left="30dp" android:top="120dp">
        <shape android:shape="oval">
            <solid android:color="#FFD700" /> <!-- Màu vàng -->
            <size android:width="140dp" android:height="70dp" />
        </shape>
    </item>
</layer-list>
