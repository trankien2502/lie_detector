<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/darkHeavy"
    tools:context=".fragment.SettingFragment">
    <RelativeLayout
        android:id="@+id/layout_language"
        android:padding="15dp"
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/img_language"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:src="@drawable/img_language"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/img_language"
            android:layout_centerVertical="true"
            android:layout_marginStart="15dp"
            android:text="@string/low_language"
            android:textSize="18sp"
            android:textColor="@color/white"
            android:fontFamily="@font/druk_text_wide_medium_trial"/>
        <LinearLayout
            android:id="@+id/layout_select_language"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_language_current"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/img_language"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="20dp"
                android:text="@string/low_language"
                android:textSize="22sp"
                android:textColor="#25FDFF"
                android:fontFamily="@font/druk_text_wide_medium_trial"/>
            <ImageView
                android:id="@+id/img_narrow_right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"

                android:layout_centerVertical="true"
                android:src="@drawable/chevron_right"
                />
        </LinearLayout>
    </RelativeLayout>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/img_border_setting"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:scaleType="fitXY"/>
    <RelativeLayout
        android:id="@+id/layout_rate"
        android:padding="15dp"
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/img_rate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:src="@drawable/img_rate"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/img_rate"
            android:layout_centerVertical="true"
            android:layout_marginStart="15dp"
            android:text="@string/rate"
            android:textSize="18sp"
            android:textColor="@color/white"
            android:fontFamily="@font/druk_text_wide_medium_trial"/>

    </RelativeLayout>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/img_border_setting"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:scaleType="fitXY"/>
    <RelativeLayout
        android:id="@+id/layout_share"
        android:padding="15dp"
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/img_share"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:src="@drawable/img_share"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/img_share"
            android:layout_centerVertical="true"
            android:layout_marginStart="15dp"
            android:text="@string/share"
            android:textSize="18sp"
            android:textColor="@color/white"
            android:fontFamily="@font/druk_text_wide_medium_trial"/>

    </RelativeLayout>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/img_border_setting"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:scaleType="fitXY"/>
    <RelativeLayout
        android:id="@+id/layout_about"
        android:padding="15dp"
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/img_about"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:src="@drawable/img_about"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/img_about"
            android:layout_centerVertical="true"
            android:layout_marginStart="15dp"
            android:text="@string/about"
            android:textSize="18sp"
            android:textColor="@color/white"
            android:fontFamily="@font/druk_text_wide_medium_trial"/>

    </RelativeLayout>



</LinearLayout>