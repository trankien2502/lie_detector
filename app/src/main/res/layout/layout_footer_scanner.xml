<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <FrameLayout
        android:id="@+id/layout_finger_print_button_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">

        <ImageView
            android:id="@+id/img_scanner_finger_print_bottom_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:src="@drawable/img_finger_print_bottom_button_default" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <FrameLayout
                android:id="@+id/layout_finger_print_button_left"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginTop="20dp"
                android:layout_weight="1" />

            <FrameLayout
                android:id="@+id/layout_finger_print_button_center"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginBottom="20dp"
                android:layout_weight="1" />

            <FrameLayout
                android:id="@+id/layout_finger_print_button_right"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginTop="20dp"
                android:layout_weight="1" >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="EYES"
                    android:layout_gravity="center_horizontal|bottom"
                    android:textColor="@color/white"
                    android:fontFamily="@font/druk_text_wide_medium_trial"
                    android:textSize="12sp"
                    android:layout_marginBottom="10dp"
                    />
            </FrameLayout>
        </LinearLayout>
    </FrameLayout>

</FrameLayout>
